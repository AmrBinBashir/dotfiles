# Open terminal
super + Return
	kitty

# Swap between open windows
alt + Tab
	rofi -show window

# App launcher
alt + space
	rofi -show drun

# Shell prompt
super + r
	rofi -show run

# Change keyboard layout
super + space
	(setxkbmap -query | grep -q "layout:\s\+us") && setxkbmap ar || setxkbmap us

# Lock screen
alt + l
	dm-tool lock

# Take a screen shot
super + shift + s
	flameshot gui

KP_Add
	amixer set Master 2%+
KP_Subtract
	amixer set Master 2%-

Next
	playerctl next
Prior
	playerctl play-pause
End
	playerctl previous